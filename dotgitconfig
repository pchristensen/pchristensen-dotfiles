[user]
	name = Peter Christensen
	email = peter@geekstack.com
[core]
	editor = emacsclient -nw --alternate-editor=''
[color]
	ui = auto

[alias]
  # I like using the interactive mode to make complex commits
  ai = add --interactive

  # All the aliases relate to commits. Note that
  # they are grouped by common prefixes, so I don't
  # confuse what I want done by accident.
  c = commit
  # commit with a message
  cm = commit -m
  cma = commit -a -m
  # amending the previous commit
  ca = commit --amend
  caa = commit -a --amend -C HEAD

  # reset
  ## soft resets
  r = reset
  ruc = reset --soft HEAD^
  ruc1 = reset --soft HEAD^ 
  r1 = reset HEAD^
  r2 = reset HEAD^^
  ## hard resets
  rh = reset --hard
  rh1 = reset HEAD^ --hard
  rh2 = reset HEAD^^ --hard

  # shortcuts for commands
  s = status
  d = !sh -c 'clear && git diff $1' - 
  a = add
  co = checkout
  b = branch
  l = log
  f = fetch
  r = reset
  p = push
  w = show
  y = cherry-pick
